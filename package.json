    "lint:fix": "eslint --fix \"src/**/*.{js,jsx,ts,tsx}\"",
    "test": "npm run lint && npm run jest",
    "jest": "jest --coverage --config \"./jest.config.ts\"",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonathanhuydieu/mern-stack-backend.git"
