    "url": "https://github.com/jonathanhuydieu/mern-stack-backend/issues"
  },
  "homepage": "https://github.com/jonathanhuydieu/mern-stack-backend#readme",
  "dependencies": {
    "@sendgrid/mail": "^7.6.1",
    "@socket.io/redis-adapter": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-handler": "^1.2.0",
    "isemail": "^3.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.4",
    "redis": "^4.0.4",
    "socket.io": "^4.4.1"
